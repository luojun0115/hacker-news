{
  "name": "hacker-news",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "simple-git-hooks && npm run -s cf-typegen",
    "dev:worker": "wrangler dev --cwd worker --persist-to ../.wrangler/state",
    "deploy:worker": "wrangler deploy --cwd worker",
    "logs:worker": "wrangler tail --cwd worker",
    "tests": "wrangler dev --cwd tests --remote",
    "opennext": "opennextjs-cloudflare build",
    "preview": "npm run -s opennext && wrangler dev",
    "deploy": "npm run -s opennext && WRANGLER_BUILD_PLATFORM=node wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.17",
    "@cloudflare/puppeteer": "^1.0.2",
    "@echristian/edge-tts": "^0.0.14",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.9",
    "@shadcn/ui": "^0.0.4",
    "ai": "^4.3.9",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "markdown-it": "^14.1.0",
    "next": "^15.3.1",
    "player.style": "^0.1.7",
    "podcast": "^2.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@ast-grep/napi-darwin-arm64": "^0.37.0",
    "@ast-grep/napi-linux-x64-gnu": "^0.37.0",
    "@eslint-react/eslint-plugin": "^1.48.4",
    "@opennextjs/cloudflare": "^1.0.0-beta.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.17.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.25.1",
    "eslint-config-next": "^15.3.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "wrangler": "^4.12.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
